@model IEnumerable<darlenyWebApp.Models.WebApp.Offer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OfferPercent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Percent)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OfferPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfferID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfferID">Details</a> |
